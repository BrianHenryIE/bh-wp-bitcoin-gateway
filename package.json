		"@wordpress/components": "^32.1",
		"config": "^4.2",
		"react": "^18.3",
		"react-dom": "^18.3"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"wp-scripts lint-js --fix",

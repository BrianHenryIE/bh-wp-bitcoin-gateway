{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "bh-wp-bitcoin-gateway/exchange-rate",
	"version": "1.0.0",
	"title": "Bitcoin Exchange Rate",
	"category": "woocommerce",
	"description": "Displays the Bitcoin exchange rate from order meta.",
	"keywords": ["bitcoin", "exchange", "rate", "order"],
	"textdomain": "bh-wp-bitcoin-gateway",
	"supports": {
		"html": false,
		"align": false,
		"color": {
			"text": true,
			"background": true
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"fontFamily": true
		}
	},
	"usesContext": [
      "bh-wp-bitcoin-gateway/btcExchangeRateFormatted",
      "bh-wp-bitcoin-gateway/exchangeRateUrl"
    ],
	"attributes": {
		"useUrl": {
			"type": "boolean",
			"default": true
		},
		"showLabel": {
			"type": "boolean",
			"default": true
		}
	},
    "viewScript": "file:./exchange-rate-block.min.js"
}
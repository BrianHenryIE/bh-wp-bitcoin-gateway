{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "bh-wp-bitcoin-gateway/payment-status",
	"version": "1.0.0",
	"title": "Bitcoin Order Payment Status",
	"category": "woocommerce",
	"description": "Prints a string to show is the order pending payment, partially paid, or fully paid.",
	"keywords": ["bitcoin", "status", "order"],
	"textdomain": "bh-wp-bitcoin-gateway",
	"supports": {
		"html": false,
		"align": false,
		"color": {
			"text": true,
			"background": true
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"fontFamily": true
		}
	},
	"usesContext": ["bh-wp-bitcoin-gateway/paymentStatus"],
	"attributes": {
		"paymentStatus": {
			"type": "string"
		},
		"showLabel": {
			"type": "boolean",
			"default": true
		}
	}
}
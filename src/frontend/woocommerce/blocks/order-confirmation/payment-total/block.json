{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "bh-wp-bitcoin-gateway/payment-total",
	"version": "1.0.0",
	"title": "Bitcoin Order Payment Total",
	"category": "woocommerce",
	"description": "Prints a string to show the Bitcoin total to pay for the order.",
	"keywords": ["bitcoin", "total", "order"],
	"textdomain": "bh-wp-bitcoin-gateway",
	"supports": {
		"html": false,
		"align": false,
		"color": {
			"text": true,
			"background": true
		},
		"spacing": {
			"margin": true,
			"padding": true
		},
		"typography": {
			"fontSize": true,
			"fontFamily": true
		}
	},
	"usesContext": [
      "bh-wp-bitcoin-gateway/btcTotalFormatted"
    ],
	"attributes": {
		"showLabel": {
			"type": "boolean",
			"default": true
		}
	},
    "editorScript": "file:./payment-total-admin.min.js",
    "viewScript": "file:./payment-total-block.min.js"
}